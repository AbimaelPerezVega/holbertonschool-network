#!/usr/bin/env bash

# Backup the original hosts file
sudo cp /etc/hosts /etc/hosts.bak

# Modify localhost entry
sudo sed -i 's/^127.0.0.1.*/127.0.0.2 localhost/' /etc/hosts

# Modify facebook.com entry
sudo sed -i 's/^.*facebook.com.*/8.8.8.8 facebook.com/' /etc/hosts

echo "Hosts file modified successfully. Check changes using 'ping localhost' and 'ping facebook.com'."
